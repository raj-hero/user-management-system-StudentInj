@page
@model studentInj.Pages.Clients.IndexModel
@{
}
<br />
<h2>List of Cients</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>College ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>D.O.B.</th>
            <th>Father's Name</th>
            <th>Address</th>
            <th>Phone No</th>
            <th>Hostel</th>
            <th>Dept</th>
            <th>Admission Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListStudent)
        {
            <tr>
                <td>@item.stid</td>
                <td>@item.clid</td>
                <td>@item.first_name</td>
                <td>@item.last_name</td>
                <td>@item.dob</td>
                <td>@item.father_name</td>
                <td>@item.s_address</td>
                <td>@item.phone</td>
                <td>@item.hostel</td>
                <td>@item.dept</td>
                <td>@item.admission_date</td>
                <td>
                    <a class="btn btn-primary btn-sm" href='/Clients/Edit?stid=@item.stid'>Edit</a>
                    <a class="btn btn-danger btn-sm" href='/Clients/Delete?stid=@item.stid'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
